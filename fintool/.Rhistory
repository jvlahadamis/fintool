wide2gg <- function(data) {
plot <- data %>%
tidyr::pivot_longer(-date, names_to = "series", values_to = "value") %>%
ggplot2::ggplot(aes(x = date,
y = value,
color = series)) +
geom_line() +
scale_y_continuous(labels = scales::comma) +
labs(title = fig.title,
y = "y",
x = "x")
return(plot)
}
View(wide2gg)
